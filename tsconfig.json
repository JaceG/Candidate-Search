{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "types": ["vite/client", "react", "react-dom", "react-router-dom"],
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./dist",
    "emitDeclarationOnly": false,
    "strict": true
  },
  "include": ["src", "node_modules/@types", "node_modules/vite/client"],
  "exclude": ["node_modules", "dist"]
}
